# {{ ansible_managed }}
GRUB_TIMEOUT=3
GRUB_GFXMODE="{{ console_resolution }}x24"
GRUB_GFXPAYLOAD="{{ console_resolution }}x24"
GRUB_DEFAULT=saved
GRUB_DISABLE_SUBMENU=true
GRUB_TERMINAL_INPUT="console"
GRUB_TERMINAL_OUTPUT="console"
GRUB_CMDLINE_LINUX="{{ ' '.join(grub_linux_command_args) }}"
GRUB_DISABLE_RECOVERY="true"
GRUB_ENABLE_BLSCFG={{ "true" if grub_enable_blscfg else "false" }}
