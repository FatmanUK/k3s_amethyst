apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ ingress_prefix }}-ingress
  namespace: {{ ingress_namespace }}
  annotations:
{% if want_tls %}
    cert-manager.io/cluster-issuer: {{ certificate_issuer }}
{% endif %}
{% if want_authentication %}
    nginx.ingress.kubernetes.io/auth-type: basic
    nginx.ingress.kubernetes.io/auth-secret: {{ secret_name }}
    nginx.ingress.kubernetes.io/auth-realm: 'Authentication Required'
{% endif %}
    nginx.ingress.kubernetes.io/ssl-redirect: 'true'
spec:
  ingressClassName: nginx
{% if want_tls %}
  tls:
  - hosts:
    - {{ ingress_prefix }}.{{ domain }}
    secretName: {{ ingress_prefix }}-tls
{% endif %}
  rules:
  - host: {{ ingress_prefix }}.{{ domain }}
    http:
      paths:
      - pathType: Prefix
        path: "/"
        backend:
          service:
            name: {{ ingress_service }}
            port:
              number: {{ ingress_service_port }}
